#!/bin/bash

pacman -S i3-gaps dmenu feh playerctl xautolock dbus-python picom alacritty zsh neovim tmux curl yay
yay -S polybar betterlockscreen

# change default shell to zsh
chsh -S /bin/zsh

# install oh-my-zsh
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
