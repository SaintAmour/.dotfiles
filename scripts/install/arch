#!/bin/bash

sudo pacman -S i3-gaps dmenu feh playerctl xautolock dbus-python picom alacritty zsh neovim tmux curl git base-devel

# install yay
mkdir $HOME/aur
git clone https://aur.archlinux.org/yay.git $HOME/aur/yay
cd $HOME/aur/yay
makepkg -si
cd -

yay -S polybar betterlockscreen

# install oh-my-zsh
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# change default shell to zsh
chsh -s /bin/zsh
